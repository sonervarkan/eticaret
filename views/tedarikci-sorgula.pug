doctype html
html(lang="tr")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title Tedarikçi Sorgula
    link(rel="stylesheet", href="/css/main.css")
    style.
      h2 {
        text-align: center;
        margin-bottom: 30px;
        color: #222;
      }
      form {
        background-color: #fff;
        padding: 30px;
        border-radius: 8px;
        box-shadow: 0 2px 6px rgba(0,0,0,0.1);
      }
      .form-group {
        margin-bottom: 20px;
      }
      .form-label {
        font-weight: bold;
        margin-bottom: 8px;
        color: #333;
      }
      .form-control {
        width: 100%;
        padding: 12px;
        border-radius: 6px;
        border: 1px solid #ccc;
        background-color: #f5f5f5;
        font-size: 16px;
      }
      .table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 40px;
      }
      .table th, .table td {
        padding: 12px;
        text-align: left;
        border: 1px solid #ddd;
      }
      .table th {
        background-color: #333;
        color: white;
      }
      .table td a {
        color: #007bff;
        text-decoration: none;
      }
      .table td a:hover {
        text-decoration: underline;
      }

  body
    // Navbar (Menü Çubuğu)
    .navbar
      ul
        li 
          img(src="/img2/logo.jpg" height="50px" width="50px") 
        li
          a.navbar-brand(href="#") Admin Paneli
        li
          a(href="/admin-home-page") Admin Home Page
        li
          a(href="/tedarikci-listele") Tedarikçi Listele
      

    // Sorgulama Formu
    .container.my-5
      h2 Tedarikçi Sorgula
      form(action="/tedarikci-sorgula", method="POST")
        .form-group
          label.form-label(for="sorguTipi") Sorgu Tipi
          select.form-control(name="sorguTipi", id="sorguTipi", required)
            option(value="tedarikci_id") Tedarikçi ID
            option(value="tedarikci_firma") Tedarikçi Firma Adı
            option(value="tedarikci_tel") Tedarikçi Telefon
        .form-group
          label.form-label(for="sorguDegeri") Sorgu Değeri
          input.form-control(type="text", id="sorguDegeri", name="sorguDegeri", required)
        button.btn(type="submit") Sorgula

    // Sorgulama Sonuçları
    .container.my-5
      if tedarikciler && tedarikciler.length > 0
        h3 Sorgu Sonuçları
        table.table
          thead
            tr
              th Tedarikçi ID
              th Tedarikçi Adı
              th Tedarikçi Soyadı
              th Tedarikçi Firma
              th Tedarikçi Telefon
              th Tedarikçi Email
          tbody
            each tedarikci in tedarikciler
              tr
                td= tedarikci.tedarikci_id
                td= tedarikci.tedarikci_adi
                td= tedarikci.tedarikci_soyadi
                td= tedarikci.tedarikci_firma
                td= tedarikci.tedarikci_tel
                td= tedarikci.tedarikci_email
      else if tedarikciler
        p Sorgu sonucu bulunamadı.

    // Footer
    footer
      p &copy; 2025 E-Ticaret. Tüm hakları saklıdır.
