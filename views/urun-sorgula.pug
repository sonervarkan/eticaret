doctype html
html(lang="tr")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title Ürün Sorgula
    link(rel="stylesheet", href="/css/main.css")
    style.
      
      h2 {
        text-align: center;
        margin-bottom: 30px;
        color: #222;
      }
      form {
        background-color: #fff;
        padding: 30px;
        border-radius: 8px;
        box-shadow: 0 2px 6px rgba(0,0,0,0.1);
      }
      .form-group {
        margin-bottom: 20px;
      }
      .form-label {
        font-weight: bold;
        margin-bottom: 8px;
        color: #333;
      }
      .form-control {
        width: 100%;
        padding: 12px;
        border-radius: 6px;
        border: 1px solid #ccc;
        background-color: #f5f5f5;
        font-size: 16px;
      }
      
      .table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 40px;
      }
      .table th, .table td {
        padding: 12px;
        text-align: left;
        border: 1px solid #ddd;
      }
      .table th {
        background-color: #333;
        color: white;
      }
      .table td a {
        color: #007bff;
        text-decoration: none;
      }
      .table td a:hover {
        text-decoration: underline;
      }
      

  body
    // Navbar
    .navbar
      ul
        li 
          img(src="/img2/logo.jpg" height="50px" width="50px") 
        li 
          p Admin Paneli
        li
          a(href="/admin-home-page") Admin Home Page
        li 
          a(href="/urun-listele") Ürün Listesi
    

    // Sorgulama Formu
    .container.my-5
      h2 Ürün Sorgula
      form(action="/urun-sorgula", method="POST")
        .form-group
          label.form-label(for="sorguTipi") Sorgu Tipi
          select.form-control(name="sorguTipi", id="sorguTipi", required)
            option(value="urun_id") Ürün ID
            option(value="tedarikci_firma") Tedarikçi Firma Adı
            option(value="marka_adi") Marka Adı
        .form-group
          label.form-label(for="sorguDegeri") Sorgu Değeri
          input.form-control(type="text", id="sorguDegeri", name="sorguDegeri", required)
        button.btn(type="submit") Sorgula

    // Sorgulama Sonuçları
    .container.my-5
      if urunler && urunler.length > 0
        h3 Sorgu Sonuçları
        table.table
          thead
            tr
              th Ürün ID
              th Açıklama
              th Fiyat
              th Marka Adı
              th Model Adı
              th Tedarikçi Firma
              th Resim URL
          tbody
            each urun in urunler
              tr
                td= urun.urun_id
                td= urun.urun_aciklama
                td= urun.urun_fiyati
                td= urun.marka_adi
                td= urun.model_adi
                td= urun.tedarikci_firma
                td
                  a(href=`/resim-gor?url=${urun.urun_resim_url}`, target="_blank") Resmi Gör


    // Footer
    footer
      p &copy; 2025 E-Ticaret. Tüm hakları saklıdır.
